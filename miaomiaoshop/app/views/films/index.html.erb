<!-- BEGIN .section -->                                                                                                                                              
<div class="section">                                                                                                                                                    

	<ul class="columns-content page-content clearfix">

		<!-- BEGIN .col-main -->
		<li class="col-main">

			<h2 class="page-title">管理商品信息</h2>
				<% cnt = 0 %>
				<% @films.each do |film| %>
					<% if cnt % 2 == 0 %>
					<% end %>
					<div class="blog-title clearfix">
						<div class="fl">
							<h3><%= film.title %></h3>
						</div>

						<div class="comment-count fr">
							<h3><%= film.length %></h3>
							<div class="comment-point"></div>
						</div>
					</div>

					<!-- BEGIN .blog-content -->
					<div class="blog-content clearfix">
						<div class="block-img1"><%= image_tag '/images/'+film.title+'.jpeg' %></div>
						<p>
						<%= link_to '详细信息', film ,:class=>"button2"%>
						<%= link_to '编辑', edit_film_path(film) ,:class=>"button2"%>
						<%= link_to '删除', film, method: :delete, data: { confirm: '确定删除？' } ,:class=>"button2"%>
						</p>
					</div>
			
				<%end%>
			
		<%= link_to '添加新商品', new_film_path ,:class=>"button3" %>
		<%= link_to('返回',{:controller=>"administrators",:action=>"admin"},:class=>"button3")%>
		</li>
	</ul>
</div>

