
<!-- BEGIN .section -->
<div class="section">                                                                                                                                                    

	<ul class="columns-content page-content clearfix">                                                                                                                           

		<!-- BEGIN .col-main -->
		<li class="col-main">


			<!-- BEGIN .blog-title-single -->
			<div class="blog-title-single clearfix">
				<div class="fl">
					<h2><%= @film.title %><span><%= @film.title %></span></h2>
				</div>
				<div class="comment-count fr">
					<h3><%= @film.length %></h3>
					<div class="comment-point"></div>
				</div>
			</div>
			<!-- END .blog-title-single -->

			<!-- BEGIN .blog-content -->
			<div class="blog-content clearfix">
				<div class="block-img1"><%= image_tag '/images/'+@film.title+'.jpeg' %></div>

				<ul class="comment-list">

					<li>
					<p class="comment-author">商品名称：</a><span><%= @film.title %></span></p>
					<p class="comment-author">商品单价：</a><span><%= @film.director %></span></p>
					<p class="comment-author">商品数量：</a><span><%= @film.length %></span></p>
					<p class="comment-author">商品产地：</a><span><%= @film.country %></span></p>
					<p class="comment-author">商品日期：</a><span><%= @film.time %></span></p>
					<p class="comment-author">商品简介：</a><span><%= @film.description %></span></p>
					</li>
				</div>
				<p><%= link_to('返回',{:controller=>'store' ,:action=>'show_after'}, :class=>"button2") %></p>

			</div>

		</li>
</div>	
