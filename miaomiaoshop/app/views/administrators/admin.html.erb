<div class="section">

	<ul class="columns-content page-content clearfix">

		<!-- BEGIN .col-main -->
		<li class="col-main">

		<!-- BEGIN .blog-title-single -->
		<div class="blog-title-single clearfix">
			<div class="fl">
				<h1>营业统计<span>by Abby Dong</span></h1>
			</div>
		</div>
		<!-- END .blog-title-single -->

		<!-- BEGIN .blog-content -->
		<div class="blog-content clearfix">
			<div class="block-img1"><img src="images/blog-image2.jpg" alt="" class="prev-image" /></div>
			<table class="table table-striped">
				<tr>
					<th>最近30天内业额</th>
					<th>最近90天内营业额</th>
					<th>最近365天营业额</th>
				</tr>
				<tr>
					<td>
						<%= Order.find(:all,:conditions=>["time >= ? and time <= ?",Time.now - 30.day,Time.now]).sum{|order| order.price} %>
					</td>
					<td>
						<%= Order.find(:all,:conditions=>["time >= ? and time <= ?",Time.now - 90.day,Time.now]).sum{|order| order.price} %>
					</td>
					<td>
						<%= Order.find(:all,:conditions=>["time >= ? and time <= ?",Time.now - 365.day,Time.now]).sum{|order| order.price} %>
					</td>
				</tr>
			</table>
			<!--END.blog-content -->
		</div>

		<!-- BEGIN .blog-title-single -->
		<div class="blog-title-single clearfix">
			<div class="fl">
				<h1>各商品营业统计<span>by Abby Dong</span></h1>                                                                                                            
			</div>
		</div>
		<!-- END .blog-title-single -->

		<!-- BEGIN .blog-content -->
		<div class="blog-content clearfix">
			<div class="block-img1"><img src="images/blog-image2.jpg" alt="" class="prev-image" /></div>
			<table class="table table-striped">
				<tr>
					<th>商品名称</th>
					<th>售出个数</th>
					<th>营业额</th>
				</tr>
				<% Film.all.each do |film| %>
					<tr>
						<td>
							<%= film.title %>
						</td>
						<td>
							<%= film.tickets.find(:all,:conditions=>"Onsale='f'").size %>
						</td>
						<td>
							<%= film.tickets.find(:all,:conditions=>"Onsale='f'").sum{|t| t.price} %>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
		<!-- END .blog-content -->
		<!-- BEGIN .blog-title-single -->
		<div class="blog-title-single clearfix">
			<div class="fl">
				<h1>管理：<span>by Abby Dong</span></h1>                                                                                                            
			</div>
		</div>
		<!-- END .blog-title-single -->
		<!-- BEGIN .blog-content -->
		<div class="blog-content clearfix">
			<div class="block-img1"><img src="images/blog-image2.jpg" alt="" class="prev-image" /></div>
			<%= link_to '商品信息管理', films_url, :class=>"button2" %> 
			<%= link_to '规格数量管理', tickets_url, :class=>"button2" %>
			<%= link_to '更改管理员密码', edit_administrator_path(session[:admin_id]), :class=>"button2" %>
		</div>

		</li>
	</ul>
</div>
